{
  "name": "@buildwithtoki/blockchain-contracts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "hardhat": "TS_NODE_TRANSPILE_ONLY=1 hardhat",
    "test": "TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "test-local": "LOCAL_RPC_URL=$(avalanche network status | grep 'Endpoint at node2' | awk '{print $NF}') TS_NODE_TRANSPILE_ONLY=1 hardhat test --network local",
    "test-testnet": "TS_NODE_TRANSPILE_ONLY=1 hardhat test --network toki-testnet",
    "build": "TS_NODE_TRANSPILE_ONLY=1 hardhat compile",
    "clean": "rm -rf artifacts && rm -rf cache && rm -rf types",
    "clean-test": "./scripts/clean-test.sh",
    "generate-wallets": "hardhat generateWallets",
    "deploy-test": "TS_NODE_TRANSPILE_ONLY=1 hardhat run --network toki-testnet scripts/deploy.ts",
    "deploy-main": "TS_NODE_TRANSPILE_ONLY=1 hardhat run --network mainnet scripts/deploy.ts"
  },
  "devDependencies": {
    "@buildwithtoki/eslint-config-base": "^0.13.0",
    "@buildwithtoki/eslint-config-typescript": "^0.9.0",
    "@buildwithtoki/tsconfig": "^0.3.0",
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.2",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "aws-sdk": "^2.1180.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^8.19.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^10.0.0",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "hardhat-deploy": "^0.11.20"
  }
}
